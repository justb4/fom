<ul>
{% for k, v in menu %}
    <li id="manager-{{ k }}"{% if v.active %} class="active"{% endif %}>
        <a href="{{ path(v.route) }}">{{ v.title|trans }}</a>
    </li>
{% endfor %}
</ul>
{% if app.user != "" %}
<div id="manager-user-menu">
    <p>{{ "You're logged in as"|trans}} <em>{{ app.user.username }}</em>:</p>
    <ul>
        <li id="manager-account"><a href="{{ url('fom_user_user_edit', {'id': app.user.id}) }}">{{ "Your Account"|trans }}</a></li>
        <li id="manager-logout"><a href="{{ url('fom_user_login_logout') }}">{{ "Logout"|trans }}</a></li>
    </ul>
</div>
{% endif %}

