<!doctype html>
<html class="no-js" lang="{#{ app.session.locale }#}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{% block title %}{% endblock %} - {{ fom.server_name }}</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="description" content="Mapbender 3 Login">
    <meta name="viewport" content="width=device-width">
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/fommanager/css/backend.css') }}">
    {% block css %}{% endblock %}
  </head>

  <body>
    <div id="wrapper">

      {# Always use mapbender 3 form theming #}
      {% if form is defined %}
        {% form_theme form 'FOMCoreBundle:Form:fields.html.twig' %}
      {% endif %}

      {% block content %}{% endblock %}
    </div>

    <script src="{{ asset('bundles/fomcore/js/jquery-1.9.1.min.js')}}"></script>
    <script src="{{ asset('bundles/fomcore/js/components.js')}}"></script>
    {% block js %}{% endblock %}
  </body>
</html>