{% set title %}{% block title %}{% endblock %}{% endset %}
<!doctype html>
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!-- Consider adding a manifest.appcache: h5bp.com/d/Offline -->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>{{ title }} - Mapbender Manager</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
  <!--link rel="stylesheet" href="{{ asset('bundles/fommanager/css/h5bp.css') }}"-->
  <link rel="stylesheet" href="{{ asset('bundles/fommanager/css/style.css') }}">
  <link rel="stylesheet" href="{{ asset('bundles/fommanager/bootstrap/css/bootstrap.css') }}">
  <script src="{{ asset('bundles/fommanager/js/modernizr-2.0.6.min.js') }}"></script>
  {% block manager_css %}{% endblock %}
</head>

<body class="{% if app.debug %}debug{% endif %}">
    <div id="wrapper">
        <header role="navigation">
        <h1><a href="{{ path('fom_manager_manager_index') }}"><img alt="Mapbender Manager" src="{{ asset(fom.server_logo)}}" /></a></h1>

            <form id="manager-search" action="." method="post" class="form-search">
                <input type="hidden" name="path" value="{{ app.request.attributes.get('_route') }}" class="search-query"/>
                <div class="input-append">
                    <input type="text" name="term" disabled="disabled"/><button class="btn" title="{{ "Search"|trans }}" disabled="disabled"><i class="icon-search"></i></button>
                </div>
            </form>

            <nav>
                {% if app.user != "" %}
                {% render "FOMManagerBundle:Manager:menu" with { "request": app.request } %}
                {% endif %}
            </nav>
        </header>

        <div role="main">
            <h1>{{ title|trans }}</h1>

            {% for key, flash in app.session.flashes %}
            <div class="alert alert-{{ key }}">
                {{ flash | trans }}
            </div>
            {% endfor %}

            {% block manager_content %}{% endblock %}
        </div>
    </div>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="{{ asset('bundles/fommanager/js/jquery-1.7.1.js') }}"><\/script>')</script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js"></script>
    <script>window.jQuery || document.write('<script src="{{ asset('bundles/fommanager/js/jquery-ui-1.8.16.min.js') }}"><\/script>')</script>
    <script src="{{ asset('bundles/fommanager/bootstrap/js/bootstrap.js')}}"></script>
    <script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    {% block manager_js %}{% endblock %}
</body>
</html>

