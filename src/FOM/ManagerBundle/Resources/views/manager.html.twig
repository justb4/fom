{% set title %}{% block title %}{% endblock %}{% endset %}
<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{{ title|trans }}</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="description" content="Mapbender 3">
    <meta name="viewport" content="width=device-width">
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/fommanager/css/backend.css') }}">
    {% block manager_css %}{% endblock %}
  </head>

  <body class="{% if app.debug %}debug{% endif %}">
    <div class="head"><hr class="dekoSeperator"></div>
    <div id="wrapper" class="page">

      {# XXXVH: search?
      <form id="manager-search" action="." method="post" class="form-search">
        <input type="hidden" name="path" value="{{ app.request.attributes.get('_route') }}" class="search-query"/>
        <div class="input-append">
          <input type="text" name="term" disabled="disabled"/><button class="btn" title="{{ "Search"|trans }}" disabled="disabled"><i class="icon-search"></i></button>
        </div>
      </form> #}

      <div class="leftPane">
        <a href="{{ path('mapbender_core_welcome_list') }}"><img class="logo" alt="Mapbender 3 Manager" src="{{ asset(fom.server_logo)}}" /></a>
        {% if app.user != "" %}
          {% render "FOMManagerBundle:Manager:menu" with { "request": app.request } %}
        {% endif %}
      </div>

      <div class="rightPane">
          <div id="manager-user-menu" class="accountBar shadowBox {% if app.user != "" %} stretchable {% endif %}">
          {% if app.user != "" %}
            <span class="smallText">{{ "Logged in as"|trans}}: {{ app.user.username }} â–¼</span>
            <ul>
                <li id="manager-account"><a class="linkButton" href="{{ url('fom_user_user_edit', {'id': app.user.id}) }}">{{ "Your Account"|trans }}</a></li>
                <li id="manager-logout"><a class="linkButton" href="{{ url('fom_user_login_logout') }}">{{ "Logout"|trans }}</a></li>
            </ul>
          {% else %}
            <a class="linkButton" href="{{ path('fom_user_login_login') }}">{{ "Login"|trans}}</a>
          {% endif %}
          </div>
        <div class="contentPane">
          {% if app.user != "" %}
            {% render "FOMManagerBundle:Manager:bread" with { "request": app.request } %}
          {% endif %}
          <div class="content shadowBox">
            <h2 class="contentTitle">{{ title|trans }}</h2>
{# XXXVH !! alert? #}
            {% for key, flash in app.session.flashes %}
              <div class="alert alert-{{ key }}">
                {{ flash | trans }}
              </div>
            {% endfor %}

            {% block manager_content %}{% endblock %}
          </div>
        </div>
      </div>
    </div>

    <script src="{{ asset('bundles/fomcore/js/jquery-1.9.1.min.js')}}"></script>
    <script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ asset('bundles/fomcore/js/components.js')}}"></script>
    <script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    {% block manager_js %}{% endblock %}
  </body>
</html>