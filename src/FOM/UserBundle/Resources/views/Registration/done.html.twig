{% extends "FOMUserBundle:Login:box.html.twig" %}

{% block title %} {{ 'Registration' | trans}} {% endblock %}

{% block box_content %}
    <div class="loginBox">
        <h2 class="contentTitle">{% trans %}Congratulations!{% endtrans %}</h2>
        {% trans with { '%url%': url('fom_user_login_login') } %}
            <p class="description">You're account has been successfully activated and is ready for use.</p>
        {% endtrans %}
        <a class="left iconLinkButton linkButton" href="{{ path('fom_user_login_login') }}">{{ "Back to login"|trans}}</a>
        <div class="clearContainer"></div>
    </div>
{% endblock %}
