{% extends "FOMManagerBundle::backend.html.twig" %}

{% block title %}Registration{% endblock %}

{% block css %}
  {{parent()}}
  <link rel="stylesheet" type="text/css" href="{{ asset('bundles/fomuser/login.css') }}" />
{% endblock %}

{% block backend_content %}
  <div class="authWrapper register">
    <div class="head"><hr class="dekoSeperator"></div>
    <a class="logo" href="{{ path('mapbender_core_welcome_list') }}"><img alt="Mapbender 3" src="{{ asset(fom.server_logo)}}" /></a>

    <div class="loginBox">
      <h2 class="contentTitle">{{ 'Registration' | trans}}</h2>
      <form action="{{ path('fom_user_registration_register') }}" method="post" {{ form_enctype(form) }} autocomplete="off" novalidate="novalidate">

          <label class="left labelInput" for="{{ form.username.get('id') }}">{{"Username" | trans}}:<span class="required">*</span></label>
          {{ form_widget(form.username) }}
          <div class="clearContainer"></div>

          {% for pw in form.password %}
            {% if pw.get('name') == 'first' %}
              <label class="left labelInput" for="{{ pw.get('id') }}">{{"Choose password" | trans}}:<span class="required">*</span></label>
            {% else %}
              <label class="left labelInput" for="{{ pw.get('id') }}">{{"Confirm password" | trans}}:<span class="required">*</span></label>
            {% endif %}

            {{ form_widget(pw) }}
          {% endfor %}

          <label class="left labelInput" for="{{ form.email.get('id') }}">{{"Email" | trans}}:<span class="required">*</span></label>
          {{ form_widget(form.email) }}
          <div class="clearContainer"></div>

          {{ form_row(form._token) }}

          <a class="left linkButton iconLinkButton" href="{{ path('fom_user_login_login') }}">{{ "Back to login"|trans}}</a>
          <button class="right button">{% trans %}Register{% endtrans %}</button>
      </form>
      <div class="clearContainer"></div>
    </div>
  </div>
{% endblock %}