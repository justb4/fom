{% extends "FOMManagerBundle::backend.html.twig" %}

{% block title %}Registration{% endblock %}

{% block css %}
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/fomuser/login.css') }}" />
{% endblock %}

{% block content %}
  <div class="authWrapper register">
    <div class="head"><hr class="dekoSeperator"></div>
    <a class="logo" href="{{ path('mapbender_core_welcome_list') }}"><img alt="Mapbender 3" src="{{ asset(fom.server_logo)}}" /></a>

    <div class="loginBox">
      <h2 class="contentTitle">{{ 'Registration' | trans}}</h2>
      <form action="{{ path('fom_user_registration_register') }}" method="post" {{ form_enctype(form) }} autocomplete="off" novalidate="novalidate">

          <label class="left labelInput" for="{{ form.username.get('id') }}">{{"Username" | trans}}:</label>
          <div class="inputWrapper">
            {{ form_widget(form.username, { 'attr': {'class': 'input validationInput'} }) }}{{ form_errors(form.username) }}
          </div>

          <div class="clearContainer"></div>

          {% for pw in form.password %}
            {{ form_errors(pw) }}

            {% if pw.get('name') == 'first' %}
              <label class="left labelInput" for="{{ pw.get('id') }}">{{"Choose password" | trans}}:</label>
            {% else %}
              <label class="left labelInput" for="{{ pw.get('id') }}">{{"Confirm password" | trans}}:</label>
            {% endif %}

            {{ form_widget(pw, { 'attr': {'class': 'input'} }) }}
            <div class="clearContainer"></div>
          {% endfor %}

          {{ form_errors(form.email) }}
          <label class="left labelInput" for="{{ form.email.get('id') }}">{{"Email" | trans}}:</label>
          {{ form_widget(form.email, { 'attr': {'class': 'input'} }) }}
          <div class="clearContainer"></div>

          {{ form_row(form._token) }}

          <a class="left linkButton" href="{{ path('fom_user_login_login') }}">{{ "Login"|trans}}</a>
          <button class="right button">{% trans %}Register{% endtrans %}</button>
      </form>
      <div class="clearContainer"></div>
    </div>
  </div>
{% endblock %}

{% block js %}{% endblock %}
