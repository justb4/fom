{% extends "FOMManagerBundle::backend.html.twig" %}

{% block title %} {{ 'Password Reset' | trans}} {% endblock %}

{% block wrapperclass %}hero-unit{% endblock %}

{% block content %}
<h1>{{ 'Forgot password' | trans}}</h1>
<form action="{{ path('fom_user_password_request') }}" method="post" {{ form_enctype(form)}} autocomplete="off">
    {% if form_errors(form) %}
    <div class="alert alert-error">
        {{ form_errors(form) }}
    </div>
    {% endif %}

    {{ form_row(form.search) }}
    {{ form_row(form._token) }}

    <button class="btn btn-primary">{{ 'Require password' | trans}}</button>
</form>
{% endblock %}
