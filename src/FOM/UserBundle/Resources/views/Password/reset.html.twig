{% extends "FOMManagerBundle::backend.html.twig" %}

{% block title %} {{ 'Reset password' | trans}} {% endblock %}

{% block wrapperclass %}hero-unit{% endblock %}

{% block content %}
<h1>{{ 'Reset password' | trans}}</h1>
<form action="{{ url('fom_user_password_password', {"token": app.request.get("token")}) }}" method="post" {{ form_enctype(form)}} autocomplete="off">
    {% if form_errors(form) %}
    <div class="alert alert-error">
        {{ form_errors(form) }}
    </div>
    {% endif %}

    {{ form_row(form._token) }}
    {{ form_row(form.password) }}

    <button class="btn btn-primary">{{ 'Reset password' | trans}}</button>
</form>
{% endblock %}
