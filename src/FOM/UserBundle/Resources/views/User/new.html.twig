{% extends "FOMManagerBundle::manager.html.twig" %}

{% block title %}{{ "New User" | trans}}{% endblock %}

{% block manager_js %}
    <script type="application/javascript" src="{{ asset('bundles/fomuser/js/acl-form.js') }}"></script>
    <script type="application/javascript" src="{{ asset('bundles/mopabootstrap/js/mopabootstrap-collection.js') }}"</script>
    <script type="application/javascript" src="{{ asset('bundles/fommanager/js/form.js') }}"></script>
{% endblock %}

{% block manager_content %}

<form action="{{ path('fom_user_user_create') }}" method="post" name="{{ form_name }}" {{ form_enctype(form)}} class="well" autocomplete="off">
    {% if form_errors(form) %}
    <div>
        {{ form_errors(form) }}
    </div>
    {% endif %}

    {{ form_row(form._token) }}

    {% include 'FOMUserBundle:User:form.html.twig' %}

    <footer>
        <div>
            <input type="submit" value="{{ 'Create' | trans }}" class="btn btn-primary"/>
            <a href="{{ url('fom_user_user_index') }}">{{ 'Cancel' | trans}}</a>
        </div>
    </footer>
</form>

{% endblock %}
