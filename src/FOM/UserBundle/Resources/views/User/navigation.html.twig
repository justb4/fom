{% macro link(title, path, params, li) %}
{% set l = '<a href="' ~ path(path, params) ~ '">' ~ title ~ '</a>' %}
{% if li %}<li{% if app.request.attributes.get('_route') == path %} class="active"{% endif %}>{{ l | raw }}</li>
{% else %}{{ l | raw }}{% endif %}
{% endmacro %}
<ul class="nav nav-pills">
    {{ _self.link('Users' | trans, 'fom_user_user_index', {}, true) }}
    {{ _self.link('Roles' | trans, 'fom_user_role_index', {}, true) }}
</ul>
