{% extends "FOMManagerBundle::manager.html.twig" %}

{% block title %}{{ "Roles" | trans }}{% endblock %}

{% block manager_content %}

{% include "FOMUserBundle:User:navigation.html.twig" %}

<table class="table table-striped">
    <thead>
        <tr>
            <th>{{ "Title" | trans }}</th>
            <th>{{ "Description" | trans }}</th>
            <th>{{ "Actions" | trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for role in roles %}
        <tr id="app-{{ role.id }}">
            <td>
                <a href="{{ path('fom_user_role_edit', {'id': role.id}) }}" title="{{ 'Edit' | trans }}">{{ role.title }}</a>
            </td>
            <td>{{ role.description }}</td>
            <td>
                <div class="entity-actions btn-group">
                    <a class="action-edit btn" href="{{ path('fom_user_role_edit',  {'id': role.id }) }}" title="{{ 'Edit' | trans }}">{{ 'Edit' | trans }}</a>
                    {% if role.id != 1 %}
                    <a class="action-delete btn btn-warning" href="{{ path('fom_user_role_confirmdelete', { 'id': role.id }) }}">{{ 'Delete' | trans }}</a>
                    {% endif %}
                </div>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% include "FOMUserBundle:Role:actions.html.twig" %}

{% endblock %}
