{% extends "FOMManagerBundle::manager.html.twig" %}

{% block title %}{{ "Edit Role" | trans}}{% endblock %}

{% block manager_js %}
    <script type="application/javascript" src="{{ asset('bundles/fommanager/js/form.js') }}"></script>
{% endblock %}

{% block manager_content %}

<form action="{{ path('fom_user_role_update', { 'id': role.id }) }}" method="post" name="{{ form_name }}" {{ form_enctype(form)}} class="well">
    {% if form_errors(form) %}
    <div class="alert alert-error">
        {{ form_errors(form) }}
    </div>
    {% endif %}

    {% set user_count = '<span class="badge badge-info">' ~ role.users | length ~ '</span>' %}
    <p>{%trans with {'%user_count%': user_count } %}There are %user_count% users registered in this role.{% endtrans %}</p>

    {{ form_row(form._token) }}
    {% include 'FOMUserBundle:Role:form.html.twig' %}

    <footer>
        <div class="btn-group">
            <input type="submit" value="{{ 'Update' | trans }}" class="btn btn-primary"/>
            <a href="{{ url('fom_user_role_confirmdelete', { 'id': role.id }) }}" class="btn btn-warning">{{ 'Delete' | trans }}</a>
            <a href="{{ url('fom_user_role_index') }}" class="btn">{{ 'Cancel' | trans}}</a>
        </div>
    </footer>
</form>

{% endblock %}
