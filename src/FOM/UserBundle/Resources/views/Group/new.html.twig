{% extends "FOMManagerBundle::manager.html.twig" %}

{% block title %}{{ "New Group" | trans}}{% endblock %}

{% block manager_js %}
    <script type="application/javascript" src="{{ asset('bundles/fommanager/js/form.js') }}"></script>
{% endblock %}

{% block manager_content %}

<form action="{{ path('fom_user_group_create') }}" method="post" name="{{ form_name }}" {{ form_enctype(form)}}>
    {% if form_errors(form) %}
    <div>
        {{ form_errors(form) }}
    </div>
    {% endif %}

    {{ form_row(form._token) }}
    {% include 'FOMUserBundle:Group:form.html.twig' %}

    <footer>
        <div>
            <input type="submit" value="{{ 'Create' | trans }}"/>
            <a href="{{ url('fom_user_group_index') }}">{{ 'Cancel' | trans}}</a>
        </div>
    </footer>
</form>

{% endblock %}
